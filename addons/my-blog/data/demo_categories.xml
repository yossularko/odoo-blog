<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Demo Categories -->
        <record id="category_technology" model="blog.category">
            <field name="name">Technology</field>
            <field name="description">Articles about technology, programming, and innovation</field>
            <field name="color">1</field>
            <field name="sequence">10</field>
        </record>
        
        <record id="category_lifestyle" model="blog.category">
            <field name="name">Lifestyle</field>
            <field name="description">Life tips, health, and personal development</field>
            <field name="color">3</field>
            <field name="sequence">20</field>
        </record>
        
        <record id="category_business" model="blog.category">
            <field name="name">Business</field>
            <field name="description">Business insights, entrepreneurship, and career advice</field>
            <field name="color">4</field>
            <field name="sequence">30</field>
        </record>
        
        <record id="category_tutorial" model="blog.category">
            <field name="name">Tutorial</field>
            <field name="description">Step-by-step guides and how-to articles</field>
            <field name="color">2</field>
            <field name="sequence">40</field>
        </record>
        
        <record id="category_news" model="blog.category">
            <field name="name">News</field>
            <field name="description">Latest news and updates</field>
            <field name="color">6</field>
            <field name="sequence">50</field>
        </record>
        
    </data>
</odoo>